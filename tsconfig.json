{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@webex/webex-core": [
        "./packages/node_modules/@webex/webex-core"
      ]
    },
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": [
    "./packages/node_modules/**/*.*"
  ]
}
